@model DogViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr/>
<div class="row">
    <div class="col-6">

        <div class="card">
            <div class="card-header">
                <h5>Create a New Dog</h5>
            </div>
            <div class="card-body">

                @* controller is in HelloWorld, method we want is createDog and its a post request *@
                <form asp-controller="HelloWorld" asp-action="CreateDog" method="post">
                    <div class="mb-3">
                        <label class="form-label">Dog Name</label>

                        @* bind the name property for a dog object to this input field *@
                        <input asp-for=Name type="text" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dog Age</label>

                        @* bind the age property for a dog object to this input field *@
                        <input asp-for=Age type="number" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">

            </div>
        </div>

    </div>
</div>
